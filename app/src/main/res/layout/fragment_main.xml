<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#34120F0F"
        android:orientation="vertical">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="25dp"
                android:background="@drawable/textview_border"
                android:layout_height="200dp"
                android:orientation="vertical">

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/rain" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24度" />
            </LinearLayout>

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重庆" />

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/below" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中雨" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舒适" />

        </LinearLayout>

        <TextClock
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:format24Hour="HH:mm"
                android:format12Hour="hh:mm"
                android:textColor="@color/cardview_dark_background"
                android:textSize="50sp" />

        <LinearLayout

                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="200dp"
                android:orientation="vertical">

            <LinearLayout
                    android:background="@drawable/textview_border"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PM2.5"
                        android:gravity="center"
                        android:textSize="14sp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="41" />
            </LinearLayout>


            <TextClock
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:layout_centerHorizontal="true"
                    android:format24Hour="MM月dd日 EEEE"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:format12Hour="MM月dd日 EEEE"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/textview_border"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:id="@+id/linear_navigation"
                android:gravity="center"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/navigation" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能导航" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/textview_border"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:id="@+id/linear_ask_help"
                android:gravity="center"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/help" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有声求助" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/textview_border"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/camera" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="识图相机" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/textview_border"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bt" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启明瞳" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/iv_record"
            android:background="@drawable/record_bg"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/record" />
</LinearLayout>